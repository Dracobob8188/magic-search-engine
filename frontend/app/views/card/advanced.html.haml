= form_tag("/advanced", class: "advanced_search", method: :get) do
  .row
    .xs-sm-12
      %h2 Advanced Search
      %label{for: "advanced_name"}
        %h6 Card name
      = text_field_tag("advanced[name]", "", class: "form-control", placeholder: "Akroma")

      %label{for: "advanced_type"}
        %h6 Card type (including supertypes and subtypes)
      = text_field_tag("advanced[type]", "", class: "form-control", placeholder: "legendary dragon")

      %label{for: "advanced_oracle"}
        %h6 Rules text (Oracle)
      = text_field_tag("advanced[oracle]", "", class: "form-control", placeholder: '"3 damage to target creature"')

      %label{for: "advanced_flavor"}
        %h6 Flavor text
      = text_field_tag("advanced[flavor]", "", class: "form-control", placeholder: '"jaya ballard"')

      %label{for: "advanced_artist"}
        %h6 Flavor text
      = text_field_tag("advanced[artist]", "", class: "form-control", placeholder: 'rebecca guay')

      %h6 Rarity
      .btn-group{"data-toggle"=> "rarity"}
        = render "checkbox", group: "rarity", label: "any", value: "", checked: true
        - ["basic", "common", "uncommon", "rare", "mythic", "special"].each do |rarity|
          = render "checkbox", group: "rarity", label: rarity, value: rarity

      %h6 Set
      .btn-group{"data-toggle"=> "set"}
        = render "checkbox", group: "set", label: "any", value: "", checked: true
        - set_names_and_codes.each do |set_name, set_code|
          = render "checkbox", group: "set", label: set_code.upcase, value: set_code, tooltip: set_name

      %h6 Block
      .btn-group{"data-toggle"=> "block"}
        = render "checkbox", group: "block", label: "any", value: "", checked: true
        - block_names_codes_and_sets.each do |block_name, block_code, sets|
          = render "checkbox", group: "block", label: block_name, value: block_code, tooltip: sets

      %h6 Watermark
      .btn-group{"data-toggle"=> "watermark"}
        = render "checkbox", group: "watermark", label: "any", value: "", checked: true
        = render "checkbox", group: "watermark", label: "has watermark", value: "yes"
        = render "checkbox", group: "watermark", label: "no watermark", value: "no"
        - watermarks.each do |name|
          = render "checkbox", group: "watermark", label: name.capitalize, value: name

      = submit_tag("Search", name: nil, class: "btn btn-default")
