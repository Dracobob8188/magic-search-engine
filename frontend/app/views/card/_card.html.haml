%h3
  = link_to_card(card) do
    = card.name
  = card.mana_cost

%div= card.typeline

- if card.text.present?
  %div= h(card.text).gsub("\n", "<br/>").html_safe

- if card.flavor.present?
  %div{style: "font-style: italic"}= card.flavor

- if card.power
  %div= "#{card.power}/#{card.toughness}"

- if card.loyalty
  %div
    Loyalty:
    = card.loyalty
